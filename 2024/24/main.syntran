// TODO: z values have one more bit than x and y values and my code is a mess in
// handling this difference
let NBITS = 46;

fn get_val_from_bits(var_name: str, dict: &dict_i64): i64
{
	// Combine the var_name [xyz]* bits
	let val = 0'i64;
	for i in [0: NBITS+1]
	{
		let zkey = var_name;
		if (i < 10) zkey += "0" + str(i);
		else        zkey +=       str(i);
		//println("zkey = ", zkey);

		let zval = get_dict_i64(&dict, zkey);
		if (zval < 0) continue;
		//println("zval = ", zval);

		val |= (zval << i);
	}
	return val;
}

// TODO: left, op, right, and res args should be encapsulated in an adder struct
fn run_adder(
	x_in: i64, y_in: i64,
	left : &[str; :],
	op   : &[str; :],
	right: &[str; :],
	res  : &[str; :],
	): i64
{
	// Map IDs for input and result values
	let ids = new_dict_i64();
	let id = 0'i64;
	let NVALS_CAP = 1024;
	let vals = [-1; NVALS_CAP];

	// Set x and y in the dict

	for i in [0: NBITS]
	{
		let key = "x";
		if (i < 10) key += "0" + str(i);
		else        key +=       str(i);

		let bit = (x_in >> i) & 1'i64;
		vals[id] = bit;
		set_dict_i64(&ids , key, id); id += 1;
	}

	for i in [0: NBITS]
	{
		let key = "y";
		if (i < 10) key += "0" + str(i);
		else        key +=       str(i);

		let bit = (y_in >> i) & 1'i64;
		vals[id] = bit;
		set_dict_i64(&ids , key, id); id += 1;
	}

	let ngates = size(left, 0);

	// Map result IDs
	//
	// TODO: almost all of the ID mapping (except for swapped ones) could be
	// done outside of swap search loop
	let res_id = [0; ngates];
	for i in [0: ngates]
	{
		res_id[i] = id;
		set_dict_i64(&ids, res[i], id); id += 1;
	}

	// Map left and right operand IDs
	let left_id  = [0; ngates];
	let right_id = [0; ngates];
	for i in [0: ngates]
	{
		left_id [i] = get_dict_i64(&ids, left [i]);
		right_id[i] = get_dict_i64(&ids, right[i]);
	}
	//println("left_id = ", left_id);

	let z = 0'i64;

	// Use topological sort to evaluate nodes that have known dependencies
	// first.  See also 2024 day 5

	// No need to build `l` like in day 5.  We just evaluate the node
	// immediately instead of building a sorted list and evaluating later
	let nvars = len_dict_i64(&ids);
	let s = [0; nvars]; // stack
	let sptr = 0;

	// Build `s` with known x and y inputs first
	//
	// This could be done in a more general way from the nadj array after build
	// it
	for i in [0: NBITS]
	{
		let key = "x";
		if (i < 10) key += "0" + str(i);
		else        key +=       str(i);
		//println("key = ", key);
		let id = get_dict_i64(&ids, key);
		s[sptr] = id; sptr += 1;
	}
	for i in [0: NBITS]
	{
		let key = "y";
		if (i < 10) key += "0" + str(i);
		else        key +=       str(i);
		//println("key = ", key);
		let id = get_dict_i64(&ids, key);
		s[sptr] = id; sptr += 1;
	}
	//println("s = ", s[0: sptr]);
	//println("ngates = ", ngates);
	//println("n vars = ", nvars);

	// Build adjacency table
	let NADJ_CAP = 4;
	let nadj = [ 0; nvars];
	let  adj = [-1; NADJ_CAP, nvars];
	for i in [0: ngates]
	{
		let il =  left_id[i];
		let ir = right_id[i];

		adj[ nadj[il], il ] = i; // not res_id!
		nadj[il] += 1;

		adj[ nadj[ir], ir ] = i;
		nadj[ir] += 1;
	}
	//println("nadj = ", nadj);
	//println("adj = ", adj);

	let has_val = [false; nvars];
	for u in s[0: sptr]
		has_val[u] = true;
	//println("has_val = ", has_val);

	while sptr > 0
	{
		// Pop node from s
		sptr -= 1;
		let n = s[sptr];

		// For each sink node `m` with an edge e from n to m
		for im in [0: nadj[n]]
		{
			let m = adj[im, n];
			if (has_val[ res_id[m] ]) continue;

			// "Remove edge e from the graph" (nothing to do today, unlike day 5)

			let il =  left_id[m];
			let ir = right_id[m];
			if has_val[il] and has_val[ir]
			{
				// If m has no other incoming edges, insert m into s
				s[sptr] = res_id[m]; sptr += 1;

				// Calculate value
				let left_val  = vals[il];
				let right_val = vals[ir];
				let res_val = 0'i64;
				if op[m] == "AND"
				{
					if (left_val == 1 and right_val == 1) res_val = 1;
				}
				else if op[m] == "OR"
				{
					if (left_val == 1 or right_val == 1) res_val = 1;
				}
				else if op[m] == "XOR"
				{
					if (left_val != right_val) res_val = 1;
				}
				vals[ res_id[m] ] = res_val;
				has_val[ res_id[m] ] = true;

				let res_name = res[m];
				if (res_name[0] != "z") continue;

				// Combine the z* bits
				let iz = parse_i32(res_name[1:3]);
				z |= (res_val << iz);
			}
		}
	}
	return z;
}

fn part1(): i64
