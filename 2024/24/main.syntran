		(0b01'i64 << (bad_bit)), (0b11'i64 << (bad_bit)),
		(0b11'i64 << (bad_bit)), (0b01'i64 << (bad_bit))
		;
		2, 9
	];

	//*************************

	let res_in = res; // backup input

	// Iterate until we find the right pair to swap
	let z = 0'i64;
