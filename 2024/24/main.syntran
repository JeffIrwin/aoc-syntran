		// Perform swap
		//println("swapping ", s0a, " ", s0b, " ", res[s0a], " ", res[s0b]);
		let tmp = res[s0a];
		res[s0a] = res[s0b];
		res[s0b] = tmp;

		// Run all tests
		tests_passed = true;
		for i in [0: size(test_cases, 1)]
		{
			let x = test_cases[0,i];
			let y = test_cases[1,i];
